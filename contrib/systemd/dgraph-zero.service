[Unit]
Description=Dgraph Zero instance
Wants=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/admin/src/fractal6-db
ExecStart=/usr/bin/bash -c 'bin/dgraph zero --config config-zero.yml'
LimitNOFILE=65536
Restart=on-failure
StandardOutput=journal
StandardError=journal
User=dgraph
Group=dgraph

[Install]
WantedBy=multi-user.target
RequiredBy=dgraph-alpha.service
